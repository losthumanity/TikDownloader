# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Set webhook URL for deployment (leave empty for polling)
WEBHOOK_URL=

# Optional: Port for webhook (default: 8443)
PORT=8443

# Optional: Enable debug mode
DEBUG=False

# Optional: Admin chat ID for error notifications
ADMIN_CHAT_ID=

# Optional: Channel ID for storing large files (>50MB)
# Create a private channel, add your bot as admin, and get the channel ID
# Format: -100XXXXXXXXXX (include the -100 prefix)
STORAGE_CHANNEL_ID=